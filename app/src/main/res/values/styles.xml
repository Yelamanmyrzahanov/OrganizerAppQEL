<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#5f6cba</item>
        <item name="android:textColorHint">@color/sec_frag_main_num_col</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="NavigationViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Body2</item>
        <item name="colorControlHighlight">#eeeeee</item>
    </style>

    <style name="MyEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#38000000</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">0dp</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
